###############
#  VARIABLES  #
###############

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $disp1 "DP-1"
set $disp2 "DP-2"

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "0"

set $term alacritty

set $menu rofi -modi drun -show drun

################
#  APPEARANCE  #
################

gaps inner 5

for_window [app_id="^.*"] border pixel 3
title_align center

# Remove borders for single window (in split or tabbed mode)
hide_edge_borders --i3 smart

font pango: MesloLGS Nerd Font Mono Bold 11px

set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema font-name 'Fira Sans 10'
}

workspace_layout tabbed

# Adapted from https://gist.github.com/Cardoso1994/80641d652a4adcf6c8f718ebc3770ab9
set $bg       #282828
set $fg       #d4be98
set $red      #ea6962
set $orange   #e78a4e
set $green    #a9b665
set $blue     #7daea3
set $purple   #d3869b
set $aqua     #89b482
set $gray     #a89984

#                       border      background  text    indicator   chld_brdr
client.focused          $green      $green      $bg     $green      $green
client.focused_inactive $orange     $orange     $bg     $orange     $orange
client.unfocused        $bg         $bg         $gray   $bg         $bg
client.urgent           $red        $red        $bg     $red        $red
client.placeholder      $bg         $bg         $bg     $bg         $bg
client.background       $bg


workspace_layout tabbed

#############
#  OUTPUTS  #
#############

# Default wallpaper
output * bg #3c3836 solid_color

output Virtual-1 {
  mode 1920x1080@60Hz
  bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
}

output DP-1 {
  mode 1920x1080@144Hz
  position 0 0
  bg /usr/share/backgrounds/gnome/blobs-d.svg fill
}

output DP-2 {
  mode 1920x1080@144Hz
  transform 270
  position -1080 -420
  bg /usr/share/backgrounds/gnome/blobs-d.svg fill
}

############
#  INPUTS  #
############

input type:keyboard {
  xkb_layout "gb"
  xkb_variant "mac"
}

input 1133:16505:Logitech_G_Pro {
  accel_profile "flat"
  pointer_accel 0.5
}

###############
#  BEHAVIOUR  #
###############

# Assign workspace to secondary display
workspace $ws10 output DP-2

# Assign apps to workspaces
assign [app_id="Alacritty"] 1
assign [app_id="org.mozilla.firefox"] 2
assign [class="obsidian"] 3

exec swayidle -w \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \

###############
#  AUTOSTART  #
###############

# Systray
exec nm-applet
exec blueman-applet
exec firefox
exec alacritty

exec_always wlsunset -S 08:30 -s 20:30

##############
#  KEYBINDS  #
##############

# Reload config file
bindsym $mod+Shift+c reload

# Change split direction
bindsym $mod+Ctrl+h splith
bindsym $mod+Ctrl+v splitv

# Change window layout
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Change focused window
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Toggle focus between tiling and floating windows
bindsym $mod+Shift+space floating toggle

# Resize windows
bindsym $mod+r mode "resize"

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize shrink height 10px
    bindsym $up resize grow height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+Control+$left resize shrink width 10px
bindsym $mod+Shift+Control+$right resize grow width 10px
bindsym $mod+Shift+Control+$up resize grow height 10px
bindsym $mod+Shift+Control+$down resize shrink height 10px

# Switch workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused window to workspace and follow it
bindsym $mod+Shift+1 move container to workspace number 1, workspace $ws1
bindsym $mod+Shift+2 move container to workspace number 2, workspace $ws2
bindsym $mod+Shift+3 move container to workspace number 3, workspace $ws3
bindsym $mod+Shift+4 move container to workspace number 4, workspace $ws4
bindsym $mod+Shift+5 move container to workspace number 5, workspace $ws5
bindsym $mod+Shift+6 move container to workspace number 6, workspace $ws6
bindsym $mod+Shift+7 move container to workspace number 7, workspace $ws7
bindsym $mod+Shift+8 move container to workspace number 8, workspace $ws8
bindsym $mod+Shift+9 move container to workspace number 9, workspace $ws9
bindsym $mod+Shift+0 move container to workspace number 0, workspace $ws10

# Change volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Kill focused window
bindsym $mod+q kill

# Power menu
bindsym $mod+Shift+q exec "$HOME/.config/rofi/powermenu.sh"

# Launch apps
bindsym $mod+space exec $menu
bindsym $mod+Return exec --no-startup-id $term, workspace $ws1
bindsym $mod+b exec --no-startup-id firefox, workspace $ws2

set $screenshot_dest $HOME/Pictures/screenshot-$(date +"%Y%m%d-%H%M%S").png
bindsym $mod+Shift+s exec grimshot copy area $screenshot_dest && wl-paste -n > $screenshot_dest
bindsym $mod+Shift+p exec grimshot copy output $screenshot_dest && wl-paste -n > $screenshot_dest

for_window [app_id="firefox" title="^Picture-in-Picture$"] \
  floating enable, sticky enable, border none

#########
#  BAR  #
#########

bar {
  swaybar_command waybar
}

##########
#  MISC  #
##########

include /etc/sway/config.d/*
